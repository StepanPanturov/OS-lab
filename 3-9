#!/bin/bash

# проверка на числовое значение
is_number() {
  re='^[0-9]+$'
  if ! [[ $1 =~ $re ]]; then
    return 1
  else
    return 0
  fi
}

# ввод длины прямоугольника
read -p "Введите длину прямоугольника: " lenght

# проверка введеной длины на положительное число
if ! is_number "$lenght" || ((lenght <= 0)); then
  echo "Ошибка: длина должна быть положительным числом!"
  exit 1
fi

# ввод ширины прямоугольника
read -p "Введите ширину прямоугольника: " width

# проверка введенной ширины на положительное число
if ! is_number "$width" || ((width <= 0)); then
  echo "Ошибка: ширина должна быть положительным числом!"
  exit 1
fi

# вычисление периметра
perimeter=$((2 * (lenght + width)))

# вывод результата
echo "Периметр прямоугольника: $perimeter"

exit 0
